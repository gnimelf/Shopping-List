<div class="column is-two-fifths">
    <form class="box" id="signup-form">
        <div class="field">
            <label for="first-name" class="label">First Name</label>
            <div class="control">
                <input class="input" id="user-firstname" type="text" placeholder="e.g Alex" />
            </div>
        </div>

        <div class="field">
            <label for='password' class="label">Last Name</label>
            <div class="control">
                <input class="input" id='user-lastname' type="text" placeholder="e.g Jone" />
            </div>
        </div>
        <div class="field">
            <label for="email" class="label">Email</label>
            <div class="control">
                <input class="input" id="user-email" type="email" placeholder="e.g. alex@example.com" />
            </div>
        </div>

        <div class="field">
            <label for='password' class="label">Password</label>
            <div class="control">
                <input class="input" id='user-password' type="password" placeholder="********" />
            </div>
        </div>

        <button type="submit" "button is-primary">Sign in</button>
    </form>
</div>
<script src="./js/signup.js"></script>
